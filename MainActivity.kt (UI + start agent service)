package io.ennovatex.sentineledge.ui

import android.content.Intent
import android.os.Bundle
import androidx.appcompat.app.AppCompatActivity
import io.ennovatex.sentineledge.R
import io.ennovatex.sentineledge.agents.AgentForegroundService
import com.google.android.material.button.MaterialButton
import android.widget.TextView

class MainActivity : AppCompatActivity() {
    private lateinit var riskTv: TextView

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)
        riskTv = findViewById(R.id.risk_score)
        findViewById<MaterialButton>(R.id.start_btn).setOnClickListener {
            val i = Intent(this, AgentForegroundService::class.java)
            startForegroundService(i)
        }
        findViewById<MaterialButton>(R.id.stop_btn).setOnClickListener {
            val i = Intent(this, AgentForegroundService::class.java)
            stopService(i)
        }

        // TODO: observe LiveData from agents or RiskFusion via a local binder / broadcast
    }
}
